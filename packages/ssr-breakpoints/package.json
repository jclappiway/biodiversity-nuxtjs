{
  "name": "@biodiversity/ssr-breakpoints",
  "version": "0.0.2",
  "description": "Detect device and infer screen resolution on server or device and screen resolution breaks on client",
  "license": "MIT",
  "contributors": [
    {
      "name": "Convention on Biological Diversity <it@cbd.int>"
    }
  ],
  "main": "module.js",
  "repository": "https://github.com/scbd/biodiversity-nuxtjs/ssr-breakpoints",
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "build": "nuxt-module",
    "watch": "nuxt-module --watch",
    "lint": "eslint lib src test",
    "lint-fix": "eslint --fix lib src test",
    "test": "NODE_ENV=test yarn run build && yarn run lint && jest",
    "release": "standard-version && git push --follow-tags && npm publish",
    "prepare": "yarn run test && yarn run build"
  },
  "eslintIgnore": [
    "lib/templates/*.*"
  ],
  "files": [
    "lib",
    "src",
    "dist"
  ],
  "jest": {
    "testEnvironment": "node",
    "coverageDirectory": "./coverage/",
    "collectCoverage": true,
    "collectCoverageFrom": [
      "lib",
      "test"
    ]
  },
  "devDependencies": {
    "nuxt-module-builder": "latest"
  }
}
